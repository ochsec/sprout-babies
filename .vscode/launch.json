    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Dev Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/shop/manage.py",
            "args": [
                "runserver",
                "--settings=shop.settings.dev"
            ],
            "django": true
        },
        {
            "name": "Run Prod Server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/shop/manage.py",
            "args": [
                "runserver",
                "--settings=shop.settings.prod"
            ],
            "django": true
        }
    ]
}
